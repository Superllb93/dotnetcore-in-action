
@{
    Layout = null;
}
@model CookieAuthentication.Models.Account.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - CookieAuthentication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <h2 class="text-center">Login</h2>
        <div class="row justify-content-center">
            <div class="login col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
                    <div class="form-group">
                        <input asp-for="Account" type="text" class="form-control" placeholder="用户名" />
                        <span asp-validation-for="Account" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="密码" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="RememberMe" type="checkbox" />
                        <label asp-for="RememberMe"> 记住我</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
